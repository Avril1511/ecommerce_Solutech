@page
@model ecommerce_Solutech.Pages.CRUD.ProdutoCRUD.AlterarModel
@{
}
<h5>
	Alterar Dados do Produto
</h5>
<form 
	  method="post"
	  class="mt-3"
	  enctype="multipart/form-data"
>
	 <input asp-for="produto.Id" type="hidden" />
	    <div class="col-5">
			<label asp-for="produto.Nome" class="control-label">Nome:</label>
			<input class="form-control" asp-for="produto.Nome" />
			<span asp-validation-for="produto.Nome" class="text-danger"></span>
		</div>
	    <div class="col-5">
			<label asp-for="produto.Estoque" class="control-label">Estoque:</label>
			<input class="form-control" asp-for="produto.Estoque" />
			<span asp-validation-for="produto.Estoque" class="text-danger"></span>
	    </div>
		<div class="col-5">
			<label asp-for="produto.Preco" class="control-label">Preco:</label>
			<input class="form-control" asp-for="produto.Nome" />
			<span asp-validation-for="produto.Nome" class="text-danger"></span>
	    </div>
		<div class="col-5">
			<label asp-for="produto.ItemDoPedidos" class="control-label">Item Do Pedidos:</label>
			<input class="form-control" asp-for="produto.Estoque" />
			<span asp-validation-for="produto.Estoque" class="text-danger"></span>
	    </div>
		<div class="col-5">
			<label asp-for="ImagemProduto" class="control-label">Imagem do Produto:</label>
			<input class="form-control" asp-for="ImagemProduto" />
			<span asp-validation-for="ImagemProduto" class="text-danger"></span>
	    </div>
	<br />
	<input type="submit" value="Enviar" />

</form>