@page
@model ecommerce_Solutech.Pages.CRUD.ProdutoCRUD.AlterarModel
@{
}
<form method="post">

	<input asp-for="produto.Id" type="hidden" />
	Nome:
	<input class="form-control" asp-for="produto.Nome" />
	<br />
	Estoque:
	<input class="form-control" asp-for="produto.Estoque" />
	<span asp-validation-for="produto.Estoque" class="text-danger"></span>
	<br /> 
	<label asp-for="produto.Preco" class="control-label">Preço:</label>
	<input class="form-control" asp-for="produto.Preco" />
	<span asp-validation-for="produto.Preco" class="text-danger"></span>
	<br />
	<br />
	Item Do Pedidos:
	<input class="form-control" asp-for="produto.ItemDoPedidos" />
	<br />
	<br />
	<label asp-for="produto.VencimentoProduto" class="control-label">Vencimento do Produto:</label>
	<input class="form-control" asp-for="produto.VencimentoProduto" />
	<span asp-validation-for="produto.VencimentoProduto" class="text-danger"></span>
	<br />
	<br />
	<br />
	<input type="submit" value="Enviar" />

</form>